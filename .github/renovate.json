{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:recommended"],
  "baseBranchPatterns": ["main"],
  "rebaseWhen": "behind-base-branch",
  "dependencyDashboard": false,
  "commitMessagePrefix": "⬆️",
  "commitMessageTopic": "{{depName}}",
  "gitAuthor": "Renovate Bot <bot@renovateapp.com>",
  "enabledManagers": ["custom.regex", "github-actions"],
  "prHourlyLimit": 0,
  "customManagers": [
    {
      "customType": "regex",
      "description": "Update Add-on versions",
      "managerFilePatterns": ["/(^|/)addon_info\\.ya?ml$/"],
      "matchStrings": [
        "source:\\s*type:\\s(?<datasource>.*?)\\s*(repo|image):\\s(?<depName>.*?)\\s*current_version:\\s(?<currentValue>.*?)(?:\\s*version_template:\\s[\"']?(?<versioning>.*?)[\"']?)?\\s"
      ],
      "versioningTemplate": "{{#if versioning}}{{{versioning}}}{{/if}}"
    },
    {
      "customType": "regex",
      "description": "Update _VERSION variables in Dockerfiles",
      "managerFilePatterns": [
        "/(^|/|\\.)Dockerfile$/",
        "/(^|/)Dockerfile\\.[^/]*$/"
      ],
      "matchStrings": [
        "# renovate: datasource=(?<datasource>[a-z-]+?)(?: depName=(?<depName>.+?))? packageName=(?<packageName>.+?)(?: versioning=(?<versioning>[a-z-]+?))?\\s(?:ENV|ARG) .+?_VERSION\\s*=\\s*[\"']?(?<currentValue>.+?)[\"']?\\s"
      ]
    }
  ],
  "packageRules": [
    {
      "matchFileNames": ["*/addon_info.yaml"],
      "postUpgradeTasks": {
        "commands": [
          "/usr/local/sbin/install-tool node latest",
          "/usr/local/sbin/install-tool npm latest",
          "node .github/scripts/addon-update.js {{packageFileDir}}"
        ],
        "fileFilters": [
          "*/config.yaml",
          "*/build.yaml",
          "*/CHANGELOG.md",
          "*/addon_info.yaml",
          "*/Dockerfile"
        ],
        "executionMode": "branch"
      }
    }
  ]
}
