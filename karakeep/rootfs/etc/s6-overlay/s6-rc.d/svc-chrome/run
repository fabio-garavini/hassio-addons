#!/command/with-contenv bash
# shellcheck shell=bash

set -e

[[ ! -d "/data/cache" ]] && mkdir /data/cache && chown -R chrome:chrome /data/cache

cd /usr/src/chrome

su chrome -c "chromium-browser --headless --no-sandbox --disable-gpu --disable-dev-shm-usage --disable-software-rasterizer --remote-debugging-address=0.0.0.0 --remote-debugging-port=9222 --hide-scrollbars --disable-crash-reporter &> /dev/null"