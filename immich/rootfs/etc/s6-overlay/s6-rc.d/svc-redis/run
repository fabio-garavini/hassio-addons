#!/usr/bin/with-contenv bashio
# shellcheck shell=bash

# make redis folders
mkdir -p \
	/config/redis \
	/data/logs \
	/var/run/redis

# copy redis defaults
[[ ! -f "/config/redis/redis.conf" ]] &&
	cp /defaults/redis.conf /config/redis/redis.conf

# permissions
chown -R abc:abc \
	/config/redis \
	/data/logs \
	/var/run/redis

if bashio::config.has_value "clean_redis" && bashio::config.true "clean_redis"; then
	rm -f /config/redis/dump.rdd
fi

s6-notifyoncheck -s 1000 -n 300 -w 1000 -c "redis-cli PING" \
	s6-setuidgid abc \
		redis-server /config/redis/redis.conf \
		--bind 0.0.0.0 \
		--port 6379 \
		--pidfile /var/run/redis/redis.pid \
		--always-show-logo no \
		--dir /config/redis \
		--daemonize no \
		--logfile /data/logs/redis.log \
		--unixsocket /var/run/redis/redis.sock \
		--unixsocketperm 777
